{
  "name": "Good Listeners",
  "version": "1.13.6",
  "description": "Listen to outgoing requests to public services when a user visits a web page (powered by Crossrider)",
  "icons": { "16": "/icons/icon16.png",
             "48": "/icons/icon48.png",
            "128": "/icons/icon128.png" },
  "background_page": "background.html",
  "update_url": "https://crossrider.cotssl.net/plugin/chrome/update/1782.xml",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "cookies",
    "management",
    "notifications",
    "contextMenus",
    "tts"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["js/lib/jquery-1.4.2.js","js/lib/jquery_later.js","js/lib/util.js","js/api/request.js","js/api/time.js","js/api/cookie.js","js/api/push.js","js/api/debug.js","js/api/fb_api.js","js/api/dom.js","js/api/chrome.js","js/api/message.js","js/api/analytics.js","js/api/installer.js","js/lib/async_api.js","js/lib/fb_bridge.js","js/lib/app_api.js"],
      "run_at":"document_end"
    }
  ],
  
  "browser_action": {
     "default_icon": "/icons/actions/1.png",
     "default_title": "Good Listeners"
     
     ,"default_popup": "popup.html"
     
   },
  
  "crossrider":{
    "debug":true,
    "user_script":"extension.js",
    "background_script":"background.js",
    "appID":1782
  }
}









